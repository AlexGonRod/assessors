---
import LeafMap from "@/components/LeafMap.astro";
import Section from "@/components/ui/Section.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import metadata from "../const/meta.json";
const { mail, address, tel, name } = metadata;
---

<Section bgColor="bg-contrast" textColor="text-white" justify="left">
	<div class="grid grid-cols-1 grid-rows-1 gap-4">
			<h2 class="mb-4 text-2xl text-center">CONTACTO</h2>
			<!-- <LeafMap latitude={41.6102953} longitude={2.5192323} zoom={10} /> -->
			<Image
				src="/images/map.webp"
				alt="mapa de ubicacion"
				width={400}
				height={160}
				class="rounded-lg"
			/>
		<div class="flex flex-col">
			<div class="flex flex-row items-center justify-start">
				<div class="inline-block mr-4">
					<Icon name="mdi:google-maps" class="text-primary-600" />
				</div>
				<span class="text-base">{address}</span>
			</div>
			<div class="flex flex-row items-center justify-start">
				<div class="inline-block mr-4">
					<Icon
						name="material-symbols-light:mail-outline"
						class="text-primary-600"
					/>
				</div>
				<a
					href=`mailto:${mail}?Subject='Interesado%20en%20contratar'`
					>{mail}</a
				>
			</div>
			<div class="flex flex-row items-center justify-start">
				<div class="inline-block mr-4">
					<Icon name="mdi-light:phone" class="text-primary-600" />
				</div>
				<a href=`tel:${tel}`>{tel}</a>
			</div>
		</div>
	</div>
</Section>
